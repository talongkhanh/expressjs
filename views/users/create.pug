extends ../layouts/main
block content
	h1.mt-5 Create user
	if errors
		each error in errors
			.alert.alert-danger= error
	form(action='/users/create', method='POST')
		.form-group
			label(for='name') Name:
			input#name.form-control(type='text', name='name', value=formData?formData.name:'')
		.form-group
			label(for='phone') Phone:
			input#phone.form-control(type='text', name='phone', value=formData?formData.phone:'')
		button.btn.btn-primary(type='submit') Create