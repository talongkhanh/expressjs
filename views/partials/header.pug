nav.navbar.navbar-expand-sm.bg-dark.navbar-dark
	.container
		a.navbar-brand(href='/') Yuno
		button.navbar-toggler(data-toggle='collapse' data-target='#collapsibleNavbar')
			span.navbar-toggler-icon
		.collapse.navbar-collapse#collapsibleNavbar
			ul.navbar-nav.mr-auto
				li.nav-item
					a.nav-link(href='/books') Books
				li.nav-item
					a.nav-link(href='/products') Products
			ul.navbar-nav.ml-auto
				li.nav-item
					a#totalCount.nav-link(href='/cart') Cart(#{totalCount})
				if !user
					li.nav-item
						a.nav-link(href='/auth/login') Login
					li.nav-item
						a.nav-link(href='/auth/signup') Signup
				else
					li.nav-item.dropdown
						a.nav-link.dropdown-toggle(href='#' data-toggle='dropdown') #{user.email}
						.dropdown-menu
							a.dropdown-item(href='/auth/logout') Logout
